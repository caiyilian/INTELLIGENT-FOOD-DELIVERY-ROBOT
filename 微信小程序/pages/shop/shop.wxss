/* pages/shop/shop.wxss */
page{
    background-color: #efefef;
}

.shopThreeDot{
    margin-top: 20rpx;
}
.shopSubscribe{
    margin-left: 50rpx;
}
.shopTopView{
    height: 300rpx;
    width: 80%;
    background-color: white;
    display: flex;
    flex-direction: row;
    padding: 0 40rpx;
    margin: 0rpx 30rpx 55rpx 30rpx;
    border-radius: 15rpx;
    position: fixed;
    top: 60rpx;
    z-index: 999;
}
.shopHeadImg{
    margin-left: 30rpx;
    height: 66.6%;
    border-radius: 20rpx;
}
.shopHeadImgView{
    margin: 10rpx 0 30rpx 60rpx;
}
.shopTopText{
    margin: 15rpx auto;
    word-break:keep-all;
    text-overflow: ellipsis;
}
.shopId{
    color: orange;
}
.shopTopTextContainer{
    margin: 100rpx 10rpx auto 10rpx;
    width: 60%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    
}
.addFootButton{
    margin-left: 82%;
}
.subFootButton{
    margin-left: 10rpx;
}
.food .van-card__title{
    font-size: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}
.food .van-card__num{
    font-size: 30rpx;
}
.useless{
    height: 70px;
}
.stop{
    background-color: #efefef;
    width: 100%;
    height: 380rpx;
    z-index: 998;
    position: fixed;
    top: 0;
}
.foodContainer{
    margin: 20rpx 20rpx 20rpx 20rpx;
    border: 1px gray solid;
    overflow: hidden;
    border-radius: 30rpx;
}
.deleteFootButton{
    display: flex;
    flex-direction: row;
    margin-left: 90%;
}

.inputWindows{
    background-color: rgba(14, 35, 47, 0.5);
    width: 70%;
    left: 5%;
    height: 450rpx;
    z-index: 997;
    position: fixed;
    top: 400rpx;
    border-radius: 30rpx;
    padding: 10% 10% 10% 10%;
}
.inputWindows text{
    display: block;
    font-size: 45rpx;
    width: 100%;
    margin-left: 10%;
    text-align: center;
    margin: 0 auto;
    color: white;
}
.inputWindows view{
    margin: 30rpx auto;
    font-size:larger;
    display: flex;
    flex-direction: row;
}

.inputWindows view input{
    margin-left: 25rpx;
    border: 1px white solid;
    border-radius: 15rpx;
}
.inputFoodImg{
    height: 40rpx;
}
/* 下面这些都是对上传图片的那个东西的样式进行处理 */
.inputFoodImg van-uploader .van-uploader{
    margin: 0;
}
.inputFoodImg van-uploader .van-uploader .van-uploader__wrapper{
    margin: 0;
    padding:0;
    margin-left: 40rpx;
}
.inputFoodImg van-uploader .van-uploader .van-uploader__wrapper .van-uploader__upload{
    margin: 0;
}
/* 到这里为止 */

.inutImg{
    height: 160rpx;
    margin-left: 60rpx;
}
.cancelAndFinish{
    position: fixed;
    bottom: 0;
    background-color: white;
    height: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}
.cancelAndFinish button{
    size: 'mini';
    height: 80%;
    margin: auto;
    border-radius: 25%;
}

