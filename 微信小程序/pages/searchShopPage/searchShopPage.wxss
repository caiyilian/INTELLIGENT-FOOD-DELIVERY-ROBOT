.searchTop{
    padding:20rpx;
    display: flex;
    flex-direction: row;
    height: 70rpx;
    border-bottom: 1px black solid;
    background-color: #efefef;
}
.inputContainer{
    background-color: rgb(247, 248, 250);
    width: 80%;
    line-height: 100%;
    display: flex;
    flex-direction: row;
    border-radius: 30rpx;
}
.searchType{
    margin: auto 0;
    padding: 0 30rpx;
    width: 64rpx;
}
.searchInput{
    margin: auto 0;
}
.search{
    margin: auto 0 auto 30rpx;
}


