/* pages/subscribeShop/subscribeShop.wxss */
.searchShopContainer{
    width: 95%;
    display: flex;
    flex-direction: row;
    border: 1px solid gray;
    margin: 20rpx auto;
    /* border-radius: 15rpx; */
    background-color: rgb(245, 239, 239);
}
.searchShopTextContainer{
    display: flex;
    flex-direction: column;
}
.searchShopImg image{
    height: 230rpx;
}
.searchShopTextContainer{
    padding: 40rpx;
    word-break:keep-all;
    overflow: hidden;
}

.searchShopName{
    font-size: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 15rpx auto;
}

.searchShopId{
    margin: 15rpx auto;
}
.cancelSubscribe{
    margin: auto;
}
.cancelButton{
    font-size: 30rpx;
    border-radius: 30rpx;
}