
.myShopContainer{
    width: 90%;
    display: flex;
    flex-direction: row;
    border: 1px solid gray;
    margin: 20rpx auto;
    border-radius: 15rpx;
    background-color: rgb(245, 239, 239);
}
.myShopTextContainer{
    display: flex;
    flex-direction: column;
}
.myShopImg{
    height: 150rpx;
    width: 30%;
    margin: auto 0rpx auto 20rpx;
}
.myShopImg image{
    width: 100%;
}
.myShopTextContainer{
    padding: 40rpx;
    width: 30%;
    word-break:keep-all;
    overflow: hidden;
}

.myShopName{
    font-size: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 15rpx auto;
}

.myShopId{
    margin: 15rpx auto;
    word-break:keep-all;
    overflow: hidden;
}
.cancelMyShop{
    margin: auto;
}
.cancelButton{
    font-size: 30rpx;
    border-radius: 30rpx;
}